<div class="log_in">
  <div class="signin_container">
    <div class="form-signin">
      <h1 class="h3 mb-3 font-weight-bold">ログインをどうぞ</h1>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      
        <%= f.label :email, class:"form-label" %>
        <%= f.email_field :email, class:"form-control", placeholder:"Emailアドレス" %>

        <%= f.label :password, class:"form-label" %>
        <%= f.password_field :password, class:"form-control", placeholder:"パスワード" %>

        <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>
