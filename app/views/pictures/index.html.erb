            <% end %>
          </li>
        </ul>
      </nav>
    </div>
    <div class="col-md-4 text-center wrapper">
      <% @pictures.each do |picture| %>
      <div class="content">
        <ul>
          <li><%= picture.user.name %></li>
          <li><%= picture.content %></li>
          <%= image_tag(picture.image.url) if picture.image && picture.image.url %>
          <li><%= link_to '詳細', picture_path(picture.id) %></li>
          <li><%= link_to '編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></li>
          <li><%= link_to '削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></li>
        </ul>
      </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="navbar">
        <h1>知り合いかも</h1>
        <p><a href="">すべてを見る</a></p>
        <ul>
          <% 5.times do %>
            <li><i class="fas fa-user-circle icon1"></i></li>
            <li class="name">aaaaaaa</li>
            <li class="button1"><button type="button" class="btn btn-primary my-2">友達になる</button></li>
            <li class="button2"><button type="button" class="btn btn-secondary my-2">削除</button></li>
          <% end %>
        </ul>
      </div>
