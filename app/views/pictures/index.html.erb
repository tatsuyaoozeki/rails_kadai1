<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>ユーザ</th>
    <th>内容</th>
    <th>写真</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user.name %></td>
    <td><%= picture.content %></td>
    <td><%= image_tag(picture.image.url) if picture.image && picture.image.url %></td>
    <td><%= link_to '詳細', picture_path(picture.id) %></td>
    <td><%= link_to '編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除する', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しく投稿する', new_picture_path %>
